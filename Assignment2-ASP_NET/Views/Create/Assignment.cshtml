@model AssignmentViewModel

@{
    ViewData["Title"] = "Assignment";
}

<h1>Assignment</h1>

<h4>Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Assignment" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Assignment.Name" class="control-label"></label>
                <input asp-for="Assignment.Name" class="form-control" />
                <span asp-validation-for="Assignment.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.HelpWhere" class="control-label"></label>
                <input asp-for="Assignment.HelpWhere" class="form-control" />
                <span asp-validation-for="Assignment.HelpWhere" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.CourseId" class="control-label"></label>
                <select asp-for="Assignment.CourseId" class="form-control" asp-items="Model.CourseIdList"></select>
            </div>
            <div class="form-group">
                <label asp-for="Assignment.TeacherId" class="control-label"></label>
                <select asp-for="Assignment.TeacherId" class="form-control" asp-items="Model.TeacherIdList"></select>
            </div>
            <h5>Students:</h5>
            <div class="Choice">
                @for (int i = 0; i < Model.Students.Count; i++)
                {
                    <div>
                        <input type="hidden" asp-for="Students[i].StudentId" />
                    </div>
                    <div>
                        <input class="ChoiceInner" type="checkbox" asp-for="Students[i].IsCollaborator" />
                        <label class="ChoiceInner" asp-for="Students[i].IsCollaborator">@Model.Students[i].StudentId</label>
                    </div>
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

