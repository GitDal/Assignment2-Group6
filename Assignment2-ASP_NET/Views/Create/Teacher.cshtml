@model TeacherViewModel

@{
    ViewData["Title"] = "Teacher";
}

<h1>Teacher</h1>

<h4>Teacher</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Teacher" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Teacher.AuId" class="control-label"></label>
                <input asp-for="Teacher.AuId" class="form-control" />
                <span asp-validation-for="Teacher.AuId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.Firstname" class="control-label"></label>
                <input asp-for="Teacher.Firstname" class="form-control" />
                <span asp-validation-for="Teacher.Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Teacher.Lastname" class="control-label"></label>
                <input asp-for="Teacher.Lastname" class="form-control" />
                <span asp-validation-for="Teacher.Lastname" class="text-danger"></span>
            </div>

            <h5>Courses:</h5>
            <div class="Choice">
                @for (int i = 0; i < Model.Courses.Count; i++)
                {
                    <div>
                        <input type="hidden" asp-for="Courses[i].CourseTag" />
                    </div>
                    <div>
                        <input class="ChoiceInner" type="checkbox" asp-for="Courses[i].IsResponsible" />
                        <label class="ChoiceInner" asp-for="Courses[i].IsResponsible">@Model.Courses[i].CourseTag</label>
                    </div>
                }
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

