@model TeacherCourseHelpRequestViewModel

<h2>@Model.Course.Name</h2>
<p>Help Requests for @( Model.Teacher.Firstname + " " + Model.Teacher.Lastname)</p>

<h3>Assignment Help Requests</h3>
<table class="table table-bordered box-shadow">
    <thead>
        <tr>
            <td>Assignment Name</td>
            <td>Where to Help</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var assignment in Model.Assignments)
        {
            <tr>
                <td>@assignment.Name</td>
                <td>@assignment.HelpWhere</td>
            </tr>
        }
    </tbody>
</table>

<h3>Exercise Help Requests</h3>
<table class="table table-bordered box-shadow">
    <thead>
        <tr>
            <td>Lecture</td>
            <td>Exercise Number</td>
            <td>Where to Help</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var exercise in Model.Exercises)
        {
        <tr>
            <td>@exercise.Lecture</td>
            <td>@exercise.Number</td>
            <td>@exercise.HelpWhere</td>
        </tr>
        }
    </tbody>
</table>